rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    match /users/{userId} {
      // Lectura: propio documento, perfiles de abogados (búsqueda) y clientes (para mostrar nombres en citas)
      // resource != null evita error cuando el documento no existe aún (login)
      allow read: if isAuthenticated() && (
        request.auth.uid == userId ||
        (resource != null && (resource.data.role == 'abogado' || resource.data.role == 'cliente'))
      );
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }

    match /appointments/{appointmentId} {
      allow read: if isAuthenticated() &&
        (resource.data.clientId == request.auth.uid || resource.data.lawyerId == request.auth.uid);
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() &&
        (resource.data.clientId == request.auth.uid || resource.data.lawyerId == request.auth.uid);
    }

    match /booked_slots/{slotId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.authorId == request.auth.uid;
    }
  }
}
